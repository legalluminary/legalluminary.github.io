{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Complaint",
  "description": "Schema for a complaint record",
  "type": "object",
  "properties": {
    "date_received": {
      "type": "string",
      "format": "date"
    },
    "product": {
      "type": "string"
    },
    "sub_product": {
      "type": "string"
    },
    "issue": {
      "type": "string"
    },
    "sub_issue": {
      "type": "string"
    },
    "complaint_what_happened": {
      "type": "string"
    },
    "company_public_response": {
      "type": "string"
    },
    "company": {
      "type": "string"
    },
    "state": {
      "type": "string",
      "maxLength": 2
    },
    "zip_code": {
      "type": "string",
      "maxLength": 5
    },
    "tags": {
      "type": "string"
    },
    "consumer_consent_provided": {
      "type": "string"
    },
    "submitted_via": {
      "type": "string"
    },
    "date_sent_to_company": {
      "type": "string",
      "format": "date"
    },
    "company_response": {
      "type": "string"
    },
    "timely": {
      "type": "string",
      "enum": ["Yes", "No"]
    },
    "consumer_disputed": {
      "type": "string",
      "enum": ["N/A", "Yes", "No"]
    },
    "complaint_id": {
      "type": "string"
    }
  },
  "required": [
    "date_received", 
    "product", 
    "sub_product", 
    "issue", 
    "complaint_what_happened", 
    "company", 
    "state", 
    "zip_code", 
    "consumer_consent_provided", 
    "submitted_via", 
    "date_sent_to_company", 
    "company_response", 
    "timely", 
    "consumer_disputed", 
    "complaint_id"
  ]
}
